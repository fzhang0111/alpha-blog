<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label mt-4 text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control mt-4 shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label mt-4 text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control mt-4 shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.submit class: "btn btn-outline-info btn-lg mt-4  text-light" %>
        </div>
      <% end %>
    </div>
    
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-3 mt-4 mb-3 text-center">
      <%= link_to '[ Cancel and return to Article listing ]', articles_path %>
    </div> 
  </div>
</div>