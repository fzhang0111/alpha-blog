<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label mt-4 text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control mt-4 shadow rounded", placeholder: "enter user name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label mt-4 text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control mt-4 shadow rounded", placeholder: "enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label mt-4 text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control mt-4 shadow rounded", placeholder: "choose password" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.submit "Sign up", class: "btn btn-outline-info btn-lg mt-4  text-light" %>
        </div>
      <% end %>
    </div>
    
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-3 mt-4 mb-3 text-center">
      <%= link_to '[ Cancel and return to Article listing ]', articles_path %>
    </div> 
  </div>
</div>